---
interface Props {
  title: string;
  open?: boolean;
}

const { title, open = false } = Astro.props;
const id = title.toLowerCase().replace(/[^a-z0-9]+/g, '-');
---

<details class="expand-section" open={open ? true : undefined}>
  <summary class="expand-header" id={`summary-${id}`}>
    <span class="expand-title">{title}</span>
    <svg class="expand-chevron" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="6 9 12 15 18 9"/></svg>
  </summary>
  <div class="expand-content">
    <slot />
  </div>
</details>

<style>
  .expand-section {
    border-bottom: 1px solid var(--color-border-light);
  }

  .expand-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: var(--space-lg) 0;
    cursor: pointer;
    list-style: none;
    user-select: none;
  }

  .expand-header::-webkit-details-marker {
    display: none;
  }

  .expand-header::marker {
    display: none;
    content: '';
  }

  .expand-title {
    font-family: var(--font-heading);
    font-size: var(--text-lg);
    font-weight: 600;
    color: var(--color-text);
  }

  .expand-chevron {
    color: var(--color-text-muted);
    transition: transform var(--duration-normal) var(--ease-out);
    flex-shrink: 0;
  }

  .expand-section[open] .expand-chevron {
    transform: rotate(180deg);
  }

  .expand-content {
    padding-bottom: var(--space-xl);
  }
</style>
